<html metal:use-macro="load: ../base.pt">
  <div metal:fill-slot="content">
    <h4>${request.title}</h4>
    <hr>
    <table id="table1" class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fungsi</th>
                <th>Urusan</th>
                <th>Nama</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
  </div>
  <div metal:fill-slot="scripts">
    <script>
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/fungsiurusan/act/grid";
      Number.prototype.formatMoney = function(decPlaces, thouSeparator, decSeparator) {
        var n = this,
            decPlaces = isNaN(decPlaces = Math.abs(decPlaces)) ? 2 : decPlaces,
            decSeparator = decSeparator == undefined ? "." : decSeparator,
            thouSeparator = thouSeparator == undefined ? "," : thouSeparator,
            sign = n < 0 ? "-" : "",
            i = parseInt(n = Math.abs(+n || 0).toFixed(decPlaces)) + "",
            j = (j = i.length) > 3 ? j % 3 : 0;
        return sign + (j ? i.substr(0, j) + thouSeparator : "") + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1" + thouSeparator) + (decPlaces ? decSeparator + Math.abs(n - i).toFixed(decPlaces).slice(2) : "");
      };

        
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom"           : '<"toolbar">lfrtip',
          "sAjaxSource"    : oTableUrl,
          "bStateSave"     : true,
          "bServerSide"    : true,
          "bProcessing"    : true,
          "bScrollCollapse": true,
          "bSort"          : true,
          "bInfo"          : false,
          "bFilter"        : true,
          "bAutoWidth"     : false,
          "bPaginate"      : true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [
          {
              "bSearchable": false,
              "bVisible"   : false,
              "aTargets"   : [0]
          },{
              "bSearchable": true,
              "aTargets"   : [3]
          },{
              "bSearchable": false,
              "aTargets"   : [1,2]
          }],
          "aoColumns": [
              null,
              {"width": "120px"},
              {"width": "120px"},
              {"width": "120px"},
          ]
        });
          
        // Pencarian Kondisi, ketika data yang dicari itu bukan dari data table
        $('#table1_filter input').unbind();
        $('#table1_filter input').bind('keyup', function(e) {
            if(e.keyCode == 13) {
                oTable.fnFilter(this.value);   
            }else{
                var existingString = $("#table1_filter input").val();
                if (existingString.length > 1) {
                    var oTableUrl1 = "/fungsiurusan/act/grid1?cari="+existingString;
                    oTable.fnReloadAjax(oTableUrl1);
                }else{
                    oTable.fnReloadAjax(oTableUrl);
                }
            }
        }); 

          
        var tb_array = [
          '<div class="btn-group pull-left">',
          '	<button id="btn_add"    class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_edit"   class="btn btn btn-primary" type="button">Edit</button>',
          '	<button id="btn_delete" class="btn btn btn-danger"  type="button">Hapus</button>',
          '	<button id="btn_print"  class="btn btn btn-primary" type="button">Cetak</button>',
          '	<button id="btn_close"  class="btn btn btn-warning" type="button">Tutup</button>',
          '	&nbsp;',
          '</div>',
        ];


        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                //mID = aData[0];
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0];
                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                        /*oTable2.fnReloadAjax("egaji/grid2?id=" + mID);*/                
            }
        });
        
        $('#btn_add').click(function () {
            window.location = '/fungsiurusan/add';
        });

        $('#btn_edit').click(function () {
            if (mID) window.location = '/fungsiurusan/'+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });

        $('#btn_delete').click(function () {
            if (mID) window.location = '/fungsiurusan/'+mID+'/delete';
            else alert('Pilih Baris yang akan di hapus');
        });

        $('#btn_print').click(function () {
            url = "/ag-report/r000/act/r018"
            window.open(url);
        });

        $("#btn_close").click(function () {
            window.location = '/admin';
            return false;
        });
        
        })
    </script>
  </div>
</html>
