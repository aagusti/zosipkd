<html metal:use-macro="load: ../base.pt">
<div metal:fill-slot="content">
<h4>${request.title}</h4>
<hr>
<form method="post" accept-charset="utf-8" id="myform" class="form-horizontal" enctype="multipart/form-data">
    <div tal:condition="'id' in form" style="display:none;">
      <div tal:define="field form['id']">
          ${structure:field.serialize()}
      </div>
    </div>
 
    <div class="form-group"><!--Rekening-->
      <div tal:define="field form['rekening_id']" id="item-${field.oid}" style="display: none;">
           ${structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['rekening_kd']" >
        <div id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-8" tal:define="field form['rekening_nm']">
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
    </div>     

    <div class="form-group"><!--Rekening-->
      <div tal:define="field form['lo_sap_id']" id="item-${field.oid}" style="display: none;">
           ${structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['lo_sap_kd']" >
        <div id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-8" tal:define="field form['lo_sap_nm']">
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
    </div>
    
    <div class="form-group"><!--Rekening-->
      <div tal:define="field form['lra_sap_id']" id="item-${field.oid}" style="display: none;">
           ${structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['lra_sap_kd']" >
        <div id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-8" tal:define="field form['lra_sap_nm']">
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
    </div>
    
    <div class="form-group"><!--Rekening-->
      <div tal:define="field form['aset_sap_id']" id="item-${field.oid}" style="display: none;">
           ${structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['aset_sap_kd']" >
        <div id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-8" tal:define="field form['aset_sap_nm']">
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
    </div>
    
    <div class="form-group"> <!--Sumber-->
      <div class="col-md-4" tal:define="field form['pph_id']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
              <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                 tal:repeat="error field.error.messages()">
                 ${error}</p>
          </div>
      </div>
      <div class="col-xs-3">
          <button id="save" name="simpan" type="submit" class="btn btn-primary "
                value="simpan">Simpan</button>
          <button id="cancel" name="batal" type="submit" class="btn btn-danger "
                value="batal">Batal</button>
      </div>
    </div>
    
<script>
  //Untuk Rekening APBD
  $('#rekening_kd').bind('typeahead:selected', function(obj, datum, name) {      
        $('#rekening_id').val(datum.id);
        $('#rekening_nm').val(datum.nama);
  });
  $('#rekening_nm').bind('typeahead:selected', function(obj, datum, name) {      
        $('#rekening_id').val(datum.id);
        $('#rekening_kd').val(datum.kode);
  });
  
  //Untuk Rekening LO
  $('#lo_sap_kd').bind('typeahead:selected', function(obj, datum, name) {      
        $('#lo_sap_id').val(datum.id);
        $('#lo_sap_nm').val(datum.nama);
  });
  $('#lo_sap_nm').bind('typeahead:selected', function(obj, datum, name) {      
        $('#lo_sap_id').val(datum.id);
        $('#lo_sap_kd').val(datum.kode);
  });
  
  //Untuk Rekening LRA
  $('#lra_sap_kd').bind('typeahead:selected', function(obj, datum, name) {      
        $('#lra_sap_id').val(datum.id);
        $('#lra_sap_nm').val(datum.nama);
  });
  $('#lra_sap_nm').bind('typeahead:selected', function(obj, datum, name) {      
        $('#lra_sap_id').val(datum.id);
        $('#lra_sap_kd').val(datum.kode);
  });
  
  //Untuk Rekening Aset
  $('#aset_sap_kd').bind('typeahead:selected', function(obj, datum, name) {      
        $('#aset_sap_id').val(datum.id);
        $('#aset_sap_nm').val(datum.nama);
  });
  $('#aset_sap_nm').bind('typeahead:selected', function(obj, datum, name) {      
        $('#aset_sap_id').val(datum.id);
        $('#aset_sap_kd').val(datum.kode);
  });
</script>
</form>
</div>
</html>
