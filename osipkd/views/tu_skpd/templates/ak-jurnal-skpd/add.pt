<html metal:use-macro="load: ../base.pt">
<div metal:fill-slot="content">
  <h4>${request.title}</h4>
  <!--FORM HEADER-->
  <form id="header" method="POST" enctype="multipart/form-data" accept-charset="utf-8" 
        class="form-horizontal">
    <fieldset class="deformFormFieldset">
      <input type="hidden" name="_charset_" />
      <input type="hidden" name="__formid__" value="header"/>
      <div tal:condition="'id' in form"> <!--ID-->
        <div tal:define="field form['id']" style="display: none;">
            ${structure:field.serialize()}
        </div>
      </div>
      <div class="form-group">   
        <div tal:define="field form['tahun_id']">
          <label for="${field.oid}" class="control-label col-md-1" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-1">
             <input type="text" class="form-control" id="${field.oid}" 
                    value="${request.session.tahun}" readonly name="${field.oid}">
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        </div>
        <!-- UNIT -------------------------------------------------------------------->
        <div tal:define="field form['unit_id']" style="display: none;">
             <input type="text" class="form-control" id="${field.oid}" 
                    value="${request.session.unit_id}" readonly name="${field.oid}">
        </div>
        
        <div id="item-unit_kd">
          <label for="unit_kd" class="control-label col-md-1" id="req-unit_kd">
                  SKPD</label>
          <div class="col-md-2">
           <input type="text" class="form-control" id="unit_kd" 
                  name="unit_kd" value="${request.session.unit_kd}" readonly>
          </div>
        </div>
        <div class="col-md-6" id="item-unit_nm">
          <input type="text" class="form-control" id="unit_nm" 
                 name="unit_nm" value="${request.session.unit_nm}" readonly>
        </div>
      </div>

      
      <!--Tanggal/JV Type-->
      <div class="form-group">
        <div class="col-md-4" tal:define="field form['tanggal']" id="item-${field.oid}">
            <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                    ${field.title}</label>
            <div class="col-md-8">
               ${structure:field.serialize()}
                <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                   tal:repeat="error field.error.messages()">
                   ${error}</p>
            </div>
        </div>
   
        <div class="col-md-4">
          <div class="form-group" tal:define="field form['jv_type']" id="item-${field.oid}">
            <label for="${field.oid}" class="control-label col-md-2" id="req-${field.oid}" style="text-align:left;!important;">
                    ${field.title}</label>
            <div class="col-md-6">
               ${structure:field.serialize()}
                <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                   tal:repeat="error field.error.messages()">
                   ${error}</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group" tal:define="field form['is_skpd']" id="item-${field.oid}">
            <div class="col-md-1">
               ${structure:field.serialize()}
                <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                   tal:repeat="error field.error.messages()">
                   ${error}</p>
            </div>
            <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}" style="text-align:left;!important;">
                    ${field.title}</label>
          </div>
        </div>      
      </div>
      <!--Jurnal Kode-->
      <div class="form-group">
        
        <div class="col-md-4" tal:define="field form['kode']" >
          <div id="item-${field.oid}">
            <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                    ${field.title}</label>
            <div class="col-md-8">
               ${structure:field.serialize()}
              <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                 tal:repeat="error field.error.messages()">
                 ${error}</p>
            </div>
          </div>
        </div>
        
        <div class="col-md-8" tal:define="field form['nama']">
           ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
        </div>

   
      </div>

      <!--REFERECE-->
      <div class="form-group">
        <div class="col-md-4" tal:define="field form['source_no']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
          
        </div>
        
        <div class="col-md-3" tal:define="field form['tgl_source']" >
            <label for="${field.oid}" class="control-label col-md-2" id="req-${field.oid}" style="text-align:left;!important;">
                    ${field.title}</label>
            <div class="col-md-10">
             ${structure:field.serialize()}
            </div>
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
        </div>
        <div class="col-md-5" tal:define="field form['source']" >
           ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
        </div>
        
        
      </div>
      <!--CATATAN-->
      <div class="form-group" tal:define="field form['notes']">
          <div id="item-${field.oid}">
            <label for="${field.oid}" class="control-label col-md-2" id="req-${field.oid}">
                    ${field.title}</label>
            <div class="col-md-10">
               ${structure:field.serialize()}
              <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                 tal:repeat="error field.error.messages()">
                 ${error}</p>
            </div>
          </div>
      </div>
      <!--BUTTON-->
      <div class="col-md-offset-2">
        <div class="form-group">
            <button id="deformsave" name="simpan" type="submit" class="btn btn-primary "
                  value="simpan">Simpan</button>
            <button id="deformcancel" name="batal" type="submit" class="btn btn-default "
                  value="batal">Batal</button>
        
        </div>
      </div>
    </fieldset>
  </form>
  
  <!-- GRID ITEM -->
  <div class="row">
    <h4>Jurnal Item</h4>
    <table id="table1" class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kegiatan</th>
                <th>No</th>
                <th>Rekening</th>
                <th>Uraian</th>
                <th>Nilai</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
  </div>
  <!--form ITEM-->
  <div class="row">
    <form id="detail" method="POST" enctype="multipart/form-data" accept-charset="utf-8" 
      class="form-horizontal" name="detail">
      <input id="jurnal_item_id" type="hidden" value="" name="jurnal_item_id">
      <input id="kegiatan_sub_id" type="hidden" value="" name="kegiatan_sub_id">
      <input id="jurnal_id" type="hidden" value="" name="jurnal_id">
      <input id="rekening_id" type="hidden" value="" name="rekening_id">
      
      <div class="form-group"><!--Kegiatan-->
        <div class="col-md-3" id="item-kegiatan_sub_kd">
          <label for="kegiatan_sub_kd" class="control-label col-md-3" id="req-kegiatan_sub_kd">
                  Kegiatan</label>
          <div class="col-md-9">
                 <input id="kegiatan_sub_kd" class=" form-control " type="text" value="" name="kegiatan_sub_kd">
          </div>
        </div>
        <div class="col-md-8" id="item-kegiatan_sub_nm">
             <input id="kegiatan_sub_nm" class=" form-control " type="text" value="" name="kegiatan_sub_nm">
        </div>      
        <script>
            $('#kegiatan_sub_kd').typeahead({
                "hint": true,
                "highlight": true,
                "minLength": 1,
                "remote": "/ag-kegiatan-sub/act/headofkode?term=%QUERY", 
            },
            {
              "name": 'kegiatan_sub_kd',
              "displayKey": 'value',
            }); 
                    
            $('#kegiatan_sub_nm').typeahead({
                "hint": true,
                "highlight": true,
                "minLength": 1,
                "remote": "/ag-kegiatan-sub/act/headofnama?term=%QUERY", 
            },
            {
              "name": 'kegiatan_sub_nm',
              "displayKey": 'value',
            });         
            $('#kegiatan_sub_kd').bind('typeahead:selected', function(obj, datum, name) {      
                  $('#kegiatan_sub_id').val(datum.id);
                  $('#kegiatan_sub_nm').val(datum.nama);
            });
            $('#kegiatan_sub_nm').bind('typeahead:selected', function(obj, datum, name) {      
                  $('#kegiatan_sub_id').val(datum.id);
                  $('#kegiatan_sub_kd').val(datum.kode);
            });
        </script>
      </div>
    
      <!--REKENING -------------------------------------------------------------->  
      <div class="form-group">
        
        <div class="col-md-3 box">
          <div id="item-rekening_kd">
            <label for="rekening_kd" class="control-label col-md-3" id="req-rekening_kd">
                    Rekening</label>
            <div class="col-md-9">
               <input id="rekening_kd" class=" form-control " type="text" value="" name="rekening_kd" width="100%">
            </div>
          </div>
        </div>
        
        <div class="col-md-5">
           <input id="rekening_nm" class=" form-control " type="text" value="" name="rekening_nm">
        </div>

        <div class="col-md-3">
          <div class="form-group" id="item-amount-item">
            <label for="amount" class="control-label col-md-2" id="req-amount-item" style="text-align:left;!important;">
                    Nilai</label>
            <div class="col-md-10">
               <input id="amount" class=" form-control " type="text" value="0" name="amount">
            </div>
          </div>
        </div>
        <script>
          $('#rekening_kd').bind('typeahead:selected', function(obj, datum, name) {  
                  $('#rekening_nm').val(datum.nama);
                  $('#rekening_id').val(datum.id);
            });

          $('#rekening_nm').bind('typeahead:selected', function(obj, datum, name) {      
                $('#rekening_kd').val(datum.kode);
                $('#rekening_id').val(datum.id);
          });
    
          $('#rekening_nm').typeahead({
              "hint": true,
              "highlight": true,
              "minLength": 1,
              "remote": "/rekening/act/headofnama?term=%QUERY", 
          },
          {
            "name": 'rekening_nm',
            "displayKey": 'value',
          }); 
          $('#rekening_kd').typeahead({
              "hint": true,
              "highlight": true,
              "minLength": 1,
              "remote": "/rekening/act/headofkode?term=%QUERY", 
          },
          {
            "name": 'rekening_kd',
            "displayKey": 'value',
          });                     
          
        </script>
        
      </div>

      <!--Referensi-------------------------------------------------------------->  
      <div class="form-group">
        <div class="col-md-10">
          <div id="item-notes">
            <label for="notes" class="control-label col-md-1" id="req-notes">
                    Catatan</label>
            <div class="col-md-11">
               <input id="notes" class=" form-control " type="text" value="" name="notes">
            </div>
          </div>
        </div>
        
        <!--Button-------------------------------------------------------------->    
        <div class="col-md-2">
          <div class="form-group">
            <button id="item-baru" name="baru" type="button" class="btn btn-primary "
                  value="simpan">Baru</button>
            <button id="item-save" name="simpan" type="submit" class="btn btn-primary "
                  value="simpan">Simpan</button>
          </div>
        </div>
        <script>
          $('#item-baru').click(function () {
                $('#jurnal_item_id').val('');
                $('#detail').submit();
          });
          /*********************************************************************
          Save Jurnal Item
          *********************************************************************/
          $( "#detail").submit(function( event ) {
            var jurnal_id;
            var is_success;
            var kegiatan_sub_id ;
            var rekening_id;
            jurnal_id = $('#id').val();
            is_success = true;
            kegiatan_sub_id = $('#kegiatan_sub_id').val();
            rekening_id = $('#rekening_id').val();
            /*********************************************************************
            Cek header
            *********************************************************************/
            if (! jurnal_id || jurnal_id=='undefined'){
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + 'Jurnal Belum Disimpan');
                is_success = false;
            }
            
            if (!kegiatan_sub_id && is_success){
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + 'Isi dulu kegiatan');
                is_success = false;
            }

            if (!rekening_id && is_success){
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + 'Isi dulu rekening');
                is_success = false;
            }
            
            if (is_success){
              $('#jurnal_id').val(jurnal_id)
              $.ajax({
                type: "POST",
                url: "/ak-jurnal-item/add",
                data: $('#detail').serialize(),
                success: function (html) {
                  if (html.success == true) {
                    $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                    $('#jurnal_id').val('');
                    //$('#kegiatan_sub_id').val('');
                    //$('#kegiatan_sub_kd').val('');
                    //$('#kegiatan_sub_nm').val('');
                    $('#rekening_id').val('');
                    $('#rekening_kd').val('');
                    $('#rekening_nm').val('');
                    $('#amount').val(0);
                    
                    oTable.fnReloadAjax(oTableUrl);
                  } else {
                    $("#errors").css('display', 'inline', 'important');
                    $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  }
                },
                
                beforeSend: function () {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
                }
              });
            }
            event.preventDefault();
          });
          
        </script>
      </div>
    </form>
  </div>    
</div>


<!--javaSCRIPT-->
<div metal:fill-slot="scripts">
    <script>
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/ak-jurnal-item/act/grid?jurnal_id="+$("#id").val();  
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom": '<"toolbar">lfrtip',
          "sAjaxSource": oTableUrl,
          "bServerSide": true,
          "bProcessing": true,
          "bScrollCollapse": true,
          "bSort": true,
          "bInfo": false,
          "bFilter": true,
          "bAutoWidth": false,
          "bPaginate": true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [{
                        "bSearchable": false,
                        "bVisible": false,
                        "aTargets": [0,6,7,8,9,10]
                    }],
          "aoColumns": [
              null,
              {"width": "65px"},
              {"width": "35"},
              {"width": "85px"},
              null,
              {"width": "100px", "sClass":"right"},
              null,
              null,
              null,
              null,
              null,
          ]
        });
          
        var tb_array = [
          '<div class="btn pull-left">',
          '	<button id="btn_delete" class="btn btn btn-danger" type="button">Hapus</button>',
          '	<button id="btn_close" class="btn btn btn-warning" type="button">Tutup</button>',
          '	<!--button id="btn_edit" class="btn btn btn-primary" type="button">Edit</button-->',
          '	<!--button id="btn_pdf" class="btn btn btn-warning" type="button">PDF</button-->',
          '	<!--button id="btn_csv" class="btn btn btn-default" type="button">CSV</button-->',
          '	&nbsp;',
          '</div>',
        ];


        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0];
                $("#jurnal_item_id").val(mID);
                $("#kegiatan_sub_id").val();
                $("#kegiatan_sub_kd").val(aData[1]+'-'+aData[2]);
                $("#rekening_kd").val(aData[3]);
                $("#rekening_nm").val(aData[4]);
                $("#amount").val(aData[5]);
                $("#kegiatan_sub_nm").val(aData[6]);
                $("#jurnal_id").val(aData[7]);
                $("#notes").val(aData[8]);
                $("#kegiatan_sub_id").val(aData[9]);
                $("#rekening_id").val(aData[10]);
                
                oTable.$('tr.row_selected').removeClass('row_selected');
                $(this).addClass('row_selected');
            }
        });
        $('#btn_close').click(function () {
            window.location = '/ak-jurnal-skpd';
        });
        $('#btn_add').click(function () {
            window.location = '/ak-jurnal-item/add';
        });

        $('#btn_edit').click(function () {
            if (mID) window.location = '/ak-jurnal-item/'+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });

        $('#btn_delete').click(function () {
        
            if (mID) {
              if (confirm('Yakin di hapus?')==true){
                $.ajax({
                  type: "POST",
                  url: "/ak-jurnal-item/"+mID+"/delete",
                  success: function (html) {
                    if (html.success == true) {
                      $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                      oTable.fnReloadAjax(oTableUrl);
                    } else {
                      $("#errors").css('display', 'inline', 'important');
                      $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                    }
                  },
                  beforeSend: function () {
                    $("#errors").css('display', 'inline', 'important');
                    $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
                  }
                });
              }}
              else alert('Pilih Baris yang akan di hapus');
        });        
        })
    </script>
    
      
</div>      
</html>
