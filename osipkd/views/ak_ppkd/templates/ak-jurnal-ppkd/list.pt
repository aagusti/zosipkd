<html metal:use-macro="load: ../base.pt">
  <div metal:fill-slot="content">
    <h4>${request.title}</h4>
    <hr>
    <form id="header" class="form-horizontal">
      <!--Tahun---------------------------------------------------------------->
      <div class="form-group">
        <div class="col-md-3">
          <div id="item-tahun">
            <label for="tahun" class="control-label col-md-3" id="req-tahun">
                    Tahun</label>
            <div class="col-md-9">
               <input id="tahun" class=" form-control " type="text" 
                      value="${request.session['tahun']}" 
                      readonly name="tahun">
            </div>
          </div>
        </div>
        <div class="col-md-5">
           <input id="tahun_nm" class=" form-control " type="text" value="${request.session['ag_step_nm']}" name="tahun_nm" readonly>
        </div>
        
      </div>

      <!--SKPD--------------------------------------------------------------------->
      <input id="unit_id" type="hidden" value="${request.session['unit_id']}" name="unit_id">
      <div class="form-group">
        <div class="col-md-3">
          <div id="item-unit_kd">
            <label for="unit_kd" class="control-label col-md-3" id="req-unit_kd">
                    SKPD</label>
            <div class="col-md-9">
               <input id="unit_kd" class="form-control typeahead" type="text" value="${request.session['unit_kd']}" name="unit_kd">
            </div>
          </div>
        </div>
        
        <div class="col-md-5">
           <input id="unit_nm" class=" form-control " type="text" value="${request.session['unit_nm']}" name="unit_nm">
        </div>
      </div>
      <script>

        $('#unit_kd').typeahead({
            "hint": true,
            "highlight": true,
            "minLength": 1,
            "remote": "/unit/act/headofkode?term=%QUERY", 
        },{
          "name": 'unit_kd',
          "displayKey": 'value',
        }); 
                
        $('#unit_nm').typeahead({
            "hint": true,
            "highlight": true,
            "minLength": 1,
            "remote": "/unit/act/headofnama?term=%QUERY", 
        },{
          "name": 'unit_nm',
          "displayKey": 'value',
        }); 
        
        $('#unit_kd').bind('typeahead:selected', function(obj, datum, name) {  
              $('#unit_nm').val(datum.nama);
              $('#unit_id').val(datum.id);
              change_unit();
        });

        $('#unit_nm').bind('typeahead:selected', function(obj, datum, name) {      
              $('#unit_kd').val(datum.kode);
              $('#unit_id').val(datum.id);
              change_unit()
        });

        function change_unit(){
            $.ajax({
              type: "POST",
              url: "/unit/act/changeid",
              data: "unit_id="+$('#unit_id').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);
                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  $('#unit_kd').val('');
                  $('#unit_nm').val('');
                  $('#unit_id').val('');
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
        }
        
      </script> 

    </form>
    
    <table id="table1" class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tanggal</th>
                <th>No. Jurnal</th>
                <th>Tipe</th>
                <th>Uraian</th>
                <th>Referensi</th>
                <th>Kode Referensi</th>
                <th>Jurnals</th>
                <th>Posting</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
  </div>
  
  <div metal:fill-slot="scripts">
    <script>
      var mID,mID2;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/ak-jurnal-ppkd/act/grid";;  
        
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom"           : '<"toolbar">lfrtip',
          "sAjaxSource"    : oTableUrl,
          "bStateSave"     : true,
          "bServerSide"    : true,
          "bProcessing"    : true,
          "bScrollCollapse": true,
          "bSort"          : true,
          "bInfo"          : false,
          "bFilter"        : true,
          "bAutoWidth"     : false,
          "bPaginate"      : true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [
          {
              "bSearchable": false,
              "bVisible"   : false,
              "aTargets"   : [0]
          },{
              "bSearchable": true,
              "bSortable"  : false,
              "aTargets"   : [2,4]
          },{
              "bSearchable": false,
              "bSortable"  : false,
              "aTargets"   : [3,5,6,7,8]
          },{
                "aTargets" : [3], // Untuk Jenis
                "mRender"  : function (data, type, full) {
                    if (data == "1") {
                        return 'JT';
                    } else if (data == "2") {
                        return 'JK';
                    } else if (data == "3") {
                        return 'JU';
                    } else if (data == "4") {
                        return 'KR';
                    } else if (data == "5") {
                        return 'CL';
                    } else if (data == "6") {
                        return 'LO';
                    }
                }
          },{
                "aTargets" : [7], // Untuk Posting
                "mRender"  : function (data, type, full) {
                    if (data == "0") {
                        return 'PPKD';
                    } else if (data == "1") {
                        return 'SKPD';
                    }
                }
          },{
                "aTargets" : [8], // Untuk Posting
                "mRender"  : function (data, type, full) {
                    if (data == "0") {
                        return 'N';
                    } else if (data == "1") {
                        return 'Y';
                    }
                }
          }],
          "aoColumns": [
              null,
              {"width": "30px"},
              {"width": "50px"},
              {"width": "30px"},
              {"width": "300px"},
              {"width": "50px"},
              {"width": "80px"},
              {"width": "30px"},
              {"width": "30px",  "sClass":"right"},
          ],
          
          "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                $(nRow).on("click", function (event) {
                    if ($(this).hasClass('row_selected')) {
                        /* mID = '';
                        $(this).removeClass('row_selected'); */
                        
                    } else {

                        var data = oTable.fnGetData(this);
                        mID = data[0];

                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                    }
                })
                
                switch(aData[8]){
                    case '1' :
                        $('td',nRow).css("background-color","#ddffdd")
                        break;
                }
            },
        });
          
        var tb_array = [
          '<div class="btn-group pull-left">',
          '	<button id="btn_add"    class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_edit"   class="btn btn btn-primary" type="button">Edit</button>',
          '	<button id="btn_delete" class="btn btn btn-danger"  type="button">Hapus</button>',
          '	<button id="btn_print"   class="btn btn btn-primary" type="button">Cetak</button>',
          //'	<button id="btn_posting" class="btn btn btn-success" type="button">Posting</button>',
          //'	<button id="btn_unposting" class="btn btn btn-info" type="button">UnPosting</button>',
          '	<!--button id="btn_pdf" class="btn btn btn-warning" type="button">Cetak</button-->',
          '	<button id="btn_close"  class="btn btn btn-warning" type="button">Tutup</button>',
          '	<!--button id="btn_csv" class="btn btn btn-default" type="button">CSV</button-->',
          '	&nbsp;',
          '</div>',
        ];


        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);

                mID = aData[0];
                //mID2= aData[6];
                
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');                
            }
        });
        $('#btn_add').click(function () {
            window.location = '/ak-jurnal-ppkd/add';
        });
 
        $('#btn_edit').click(function () {
            if (mID) window.location = '/ak-jurnal-ppkd/'+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });
        
        $('#btn_posting').click(function () {
            if (mID) {
                window.location = '/ak-jurnal-ppkd/' + mID +'/posting';
            } else {
                alert('Silahkan pilih data yang akan diposting');
            }
        });
        
        $('#btn_unposting').click(function () {
            if (mID) {
                window.location = '/ak-jurnal-ppkd/' + mID +'/unposting';
            } else {
                alert('Silahkan pilih data yang akan diunposting');
            }
        });
        
        $('#btn_delete').click(function () {
            if (mID){ 
                window.location = '/ak-jurnal-ppkd/'+mID+'/delete'; 
            }else{ 
                alert('Pilih Baris yang akan di hapus');
            }
        });        

        $('#tanggal').click(
            function(){
              if (!Modernizr.inputtypes['date'] ||
                  "date" != "date"){
                $('#tanggal').pickadate({"selectMonths": true,
                  "submitFormat": "yyyy-mm-dd", 
                  "selectYears": true, "format": "yyyy-mm-dd"});
              }
            }
        );
        
        $('#btn_print').click(function () {
                $('#dlgRpt').modal('show');
        });

        $('#btn_pil_rpt').click(function () {
          var rpt = $('input[name="rpt"]:checked').val();
          var bln = $('#bulan').val();
          var tgl = $('#tanggal').val();
          if (!rpt) {
                alert('Silahkan pilih jenis Laporan');
          } else {
                /*if(rpt==1){
                url = "/ap-report-skpd/act/spm"+rpt+"?id="+mID;
                window.open(url);
                }
                else if(rpt==2){
                url = "/ap-report-skpd/act/spm"+rpt+"?id="+mID;
                window.open(url);
                }
                else if(rpt==3){
                url = "/ap-report-skpd/act/spm"+rpt+"?id="+mID;
                window.open(url);
                }
                else if(rpt==4){
                url = "/ap-report-skpd/act/spm?id="+mID;
                window.open(url);
                }
                else if(rpt==5){
                url = "/ap-report-skpd/act/spm"+rpt+"?id="+mID;
                window.open(url);
                }
                else if(rpt==6){*/
                
                url = "/ak-report-ppkd/act/jurnal"+rpt+"?bulan="+bln+"&tanggal="+tgl;
                window.open(url);
          }
        });
        $("#btn_close").click(function () {
            window.location = '/ak-ppkd';
            return false;
        });
        })
    </script>
          <!-- Modal Report -->
    <div class="modal fade" id="dlgRpt">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Pilih Report</h4>
          </div>

        <div class="modal-body"> 
        <label class="control-label col-md-3">Tanggal TTD</label>
          <div class="col-md-4">
            <input id="tanggal" class="form-control typeahead" type="text" value="${request.session['tanggal']}" name="tanggal" readonly="true">
          </div>
        </div>

        <!--Bulan-------------------------------------------------------->
        <div class="modal-body">
        <label class="control-label col-md-3">Bulan</label>
          <div class="col-md-4">
            <select class="form-control" id="bulan" name="bulan">
                <option value="1" >Januari</option>
                <option value="2" >Februari</option>
                <option value="3" >Maret</option>
                <option value="4" >April</option>
                <option value="5" >Mei</option>
                <option value="6" >Juni</option>
                <option value="7" >Juli</option>
                <option value="8" >Agustus</option>
                <option value="9" >September</option>
                <option value="10" >Oktober</option>
                <option value="11" >Nopember</option>
                <option value="12" >Desember</option>
            </select>
          </div>
        </div>

        <div class="modal-body">
        <label class="control-label col-md-3" for="rpt">Jenis Laporan</label>
        <div class="modal-body">
                <div class="radio">
                    <label class="col-md-6"><input type="radio" name="rpt" value="1">Penerimaan</label>
                </div>
                <div class="radio">
                    <label class="col-md-6"><input type="radio" name="rpt" value="2">Pengeluaran</label>
                </div>
                <div class="radio">
                    <label class="col-md-6"><input type="radio" name="rpt" value="3">Umum</label>
                </div>
        </div>
        </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
            <button type="button" class="btn btn-primary" id="btn_pil_rpt" name="btn_pil_rpt">Cetak</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
  </div>
</html>
