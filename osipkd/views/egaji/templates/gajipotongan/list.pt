                if (html.success == true) {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);
                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('egaji:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
        });
      });
      
      var dtable = $(".datatable").dataTable().api();

      // Grab the datatables input box and alter how it is bound to events
      $("#table1_filter input")
          .unbind() // Unbind previous default bindings
          .bind("input", function(e) { // Bind our desired behavior
              alert(e);
              if(this.value.length >= 3 || e.keyCode == 13) {
                  oTable.search(this.value).draw();
              }
              if(this.value == "") {
                  oTable.search("").draw();
              }
              return;
          });      
    </script>
   <script>
      /* start datatable unit*/
      var unitID, unitNm;
      var iPos1;
      var tblUnit;
      var tblUnitUrl = "/unit/act/grid";

      $(document).ready(function () {
        $('#btn_unit').click(function() {
            $('#dlgUnit').modal('show');
        });

        tblUnit = $('#tblUnit').dataTable({
          "sAjaxSource": tblUnitUrl,
          "bServerSide": true,
          "bProcessing": true,
          
          "sDom": '<"toolbar">frtip',
          "bScrollCollapse": true,
          "bSort": true,
          "bInfo": false,
          "bFilter": true,
          "bAutoWidth": false,
          "bPaginate": true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [
            {"bSearchable": false, "bVisible": false, "aTargets": [0]}, 
          ],

          "aoColumns": [
              null, 
              {"sWidth": "20px"},
              {"sWidth": "50px"}
          ],
        });
        
        $('#tblUnit tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                unitID = ''; unitKd='';unitNm='';
                $(this).removeClass('selected');
            } else {
                iPos1 = tblUnit.fnGetPosition(this);
                var aData = tblUnit.fnGetData(iPos1);
                unitID = aData[0];
                unitKd = aData[1];
                unitNm = aData[2];
                tblUnit.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });
        /* end datatable unit*/

        $('#btn_pilih1').click(function() {
          if(unitID) {
            $('#dlgUnit').modal('hide');
            $.ajax({
              type: "POST",
              url: "/unit/act/changeid",
              data: "unit_id="+unitID,
              success: function (html) {
                if (html.success == true) {
                  $('#unit_nm').val(unitNm);
                  $('#btn_unit').text(unitKd);
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);
                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('egaji:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
          }else
            alert ('Silahkan pilih salah satu atau batal!');
        });
      });
    </script>    
