<html metal:use-macro="load: ../base.pt">
  <div metal:fill-slot="content">
    <h4>${request.title}</h4>
    <hr>
  <form id="header" method="POST" enctype="multipart/form-data" accept-charset="utf-8" 
      class="form-horizontal">
  <fieldset class="deformFormFieldset">
      <!--Tahun---------------------------------------------------------------->
      <div class="form-group">
        <div id="item-tahun">
          <label for="tahun" class="control-label col-md-1" id="req-tahun">
                  Tahun</label>
          <div class="col-md-2">
             <input id="tahun" class=" form-control " type="text" 
                    value="${request.session['tahun']}" 
                    readonly name="tahun">
          </div>
        </div>

      <div class="col-md-2">
           <input id="tahun_nm" class=" form-control " type="text" value="${request.session['ag_step_nm']}" name="tahun_nm" readonly>
        </div>
      <!--Tanggal-->
      <div id="item-tanggal">
        <label for="tanggal" class="control-label col-md-4" id="req-tanggal">
                Tanggal</label>
        <div class="col-md-3">
           <input id="tanggal" class="form-control" type="text" readonly 
                  value="${request.session['tanggal']}" name="tanggal">
        </div>
      </div>
      <script>
      $('#tanggal').click(
          function(){
            if (!Modernizr.inputtypes['date'] ||
                "date" != "date"){
              $('#tanggal').pickadate({"selectMonths": true,
                "submitFormat": "yyyy-mm-dd", 
                "selectYears": true, "format": "yyyy-mm-dd"});
            }
          }

      );
      
      $('#tanggal').change(function(){
            $.ajax({
              type: "POST",
              url: "/change/tanggal",
              data: "tanggal="+$('#tanggal').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);

                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  $('#unit_kd').val('');
                  $('#unit_nm').val('');
                  $('#unit_id').val('');
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
      });
      
      </script>
        
      </div>

      <!----------------------------------------------------------------------->
      <input id="unit_id" type="hidden" value="${request.session['unit_id']}" name="unit_id">
      <div class="form-group"><!--SKPD-->
        <div id="item-unit_kd">
          <label for="unit_kd" class="control-label col-md-1" id="req-unit_kd">
                  SKPD</label>
          <div class="col-md-2">
             <input id="unit_kd" class="form-control typeahead" type="text" value="${request.session['unit_kd']}" name="unit_kd">
          </div>
        </div>
        <div class="col-md-9">
           <input id="unit_nm" class=" form-control " type="text" value="${request.session['unit_nm']}" name="unit_nm">
        </div>
      </div>
      
      <!----------------------------------------------------------------------->
      
      <script>

      
        $('#unit_kd').typeahead({
            "hint": true,
            "highlight": true,
            "minLength": 1,
            "remote": "/unit/act/headofkode?term=%QUERY", 
        },
        {
          "name": 'unit_kd',
          "displayKey": 'value',
        }); 
                
        $('#unit_nm').typeahead({
            "hint": true,
            "highlight": true,
            "minLength": 1,
            "remote": "/unit/act/headofnama?term=%QUERY", 
        },
        {
          "name": 'unit_nm',
          "displayKey": 'value',
        }); 
        
       
        function change_unit(){
            $.ajax({
              type: "POST",
              url: "/unit/act/changeid",
              data: "unit_id="+$('#unit_id').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);

                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  $('#unit_kd').val('');
                  $('#unit_nm').val('');
                  $('#unit_id').val('');
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
        }
        
        $('#unit_kd').bind('typeahead:selected', function(obj, datum, name) {  
              $('#unit_nm').val(datum.nama);
              $('#unit_id').val(datum.id);
              change_unit();
        });

        $('#unit_nm').bind('typeahead:selected', function(obj, datum, name) {      
              $('#unit_kd').val(datum.kode);
              $('#unit_id').val(datum.id);
              change_unit()
        });
      </script> 
  </fieldset>
  </form>
    <table id="table1" class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>SKPD</th>
                <th>Kode</th>
                <th>Uraian</th>
                <th>Ref. Kode</th>
                <th>Ref. Nama</th>
                <th>Tanggal</th>
                <th>Nilai</th>
                <th>Posted</th>
                <th>Rekap</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
  </div>
  
  <div metal:fill-slot="scripts">
    <script>
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/ar-invoice-item/grid/act";
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom"           : '<"toolbar">lfrtip',
          "sAjaxSource"    : oTableUrl,
          "bServerSide"    : true,
          "bProcessing"    : true,
          "bScrollCollapse": true,
          "bSort"          : true,
          "bInfo"          : false,
          "bFilter"        : true,
          "bAutoWidth"     : false,
          "bPaginate"      : true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [
          {
                "bSearchable": false,
                "bVisible"   : false,
                "aTargets"   : [0,1]
          },{
                "bSearchable": true,
                "bSortable"  : true,
                "aTargets"   : [2,3,4,5,6,7,8,9]
          },{
                "bSearchable": false,
                "bSortable"  : false,
                "aTargets"   : [1]
          },{
                "aTargets" : [8], // Untuk Posting
                "mRender"  : function (data, type, full) {
                    if (data == "0") {
                        return 'N';
                    } else if (data == "1") {
                        return 'Y';
                    }
                }
          },{
                "aTargets" : [9], // Untuk Posting
                "mRender"  : function (data, type, full) {
                    if (data == "0") {
                        return 'N';
                    } else if (data == "1") {
                        return 'Y';
                    }
                }
          }],
          "aoColumns": [
              null,
              {"width": "40px"},
              {"width": "40px"},
              {"width": "100px"},
              {"width": "40px", "sClass":"left"},
              {"width": "100px"},
              {"width": "40px", "sClass":"center"},
              {"width": "60px", "sClass":"right"},
              {"width": "30px", "sClass":"center"},
              {"width": "30px", "sClass":"center"},
          ],
          "fnRowCallback": function (nRow, aData, iDisplayIndex) {
                $(nRow).on("click", function (event) {
                    if ($(this).hasClass('row_selected')) {
                        /* mID = '';
                        $(this).removeClass('row_selected'); */
                    } else {

                        var data = oTable.fnGetData(this);
                        mID = data[0];

                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                    }
                })

                switch(aData[8]){
                    case '1' :
                        $('td',nRow).css("background-color","#ddffdd")
                        break;
                }
                switch(aData[9]){
                    case '1' :
                        $('td',nRow).css("background-color","#ddffdd")
                        break;
                }
            },
        });
          
        var tb_array = [
          '<div class="btn-group pull-left">',
          '	<button id="btn_add"    class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_edit"   class="btn btn btn-primary" type="button">Edit</button>',
          '	<button id="btn_delete" class="btn btn btn-danger"  type="button">Hapus</button>',
          '	<button id="btn_posting"   class="btn btn btn-success" type="button">Posting Transaksi</button>',
          '	<button id="btn_unposting" class="btn btn btn-info"    type="button">Un-Jurnal Transaksi</button>',
          '	<button id="btn_posting1"   class="btn btn btn-success" type="button">Posting Rekap</button>',
          '	<button id="btn_unposting1" class="btn btn btn-info"    type="button">Un-Jurnal Rekap</button>',
          //'	<button id="btn_post_rkp" class="btn btn btn-success" type="button">Posting Rekap</button>',
          ' <button id="btn_close"  class="btn btn-warning"     type="button">Tutup</button>',
          '	&nbsp;',
          '</div>',
        ];

        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                //mID = aData[0];
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0];
                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                        /*oTable2.fnReloadAjax("egaji/grid2?id=" + mID);*/                
            }
        });
        /***********************************************************************        
        BUTTON
        ***********************************************************************/
        $('#btn_add').click(function () {
            window.location = '/ar-invoice-item/add';
        });

        $('#btn_edit').click(function () {
            if (mID) window.location = '/ar-invoice-item/'+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });

        $('#btn_delete').click(function () {
            if (mID) window.location = '/ar-invoice-item/'+mID+'/delete';
            else alert('Pilih Baris yang akan di hapus');
        });        

        $("#btn_close").click(function () {
            window.location = '/skpd';
            return false;
        });
        
        $('#btn_posting').click(function () {
            if (mID) {
                window.location = '/ar-invoice-item/' + mID +'/posting';
            } else {
                alert('Silahkan pilih data yang akan diposting jurnal');
            }
        });
        
        $('#btn_unposting').click(function () {
            if (mID) {
                window.location = '/ar-invoice-item/' + mID +'/unposting';
            } else {
                alert('Silahkan pilih data yang akan diunposting jurnal');
            }
        });
        
        $('#btn_posting1').click(function () {
            $('#dlgRpt').modal('show');
        });
        
        $('#btn_pil_rpt').click(function () {
          var tgl = $('#tanggal2').val();
          
          window.location = "/ar-invoice-item/posting1?tanggal="+tgl;
        });
        
        $('#tanggal2').click(
            function(){
              if (!Modernizr.inputtypes['date'] ||
                  "date" != "date"){
                $('#tanggal2').pickadate({"selectMonths": true,
                  "submitFormat": "yyyy-mm-dd", 
                  "selectYears": true, "format": "yyyy-mm-dd"});
              }
            }
        );
        
        $('#btn_unposting1').click(function () {
            $('#dlgRpt1').modal('show');
        });
        
        $('#btn_pil_rpt1').click(function () {
          var tgl = $('#tanggal1').val();
          
          window.location = "/ar-invoice-item/unposting1?tanggal="+tgl;
        });
        
        $('#tanggal1').click(
            function(){
              if (!Modernizr.inputtypes['date'] ||
                  "date" != "date"){
                $('#tanggal1').pickadate({"selectMonths": true,
                  "submitFormat": "yyyy-mm-dd", 
                  "selectYears": true, "format": "yyyy-mm-dd"});
              }
            }
        );

        })        
    </script>
    
    <!-- Modal posting -->
    <div class="modal fade" id="dlgRpt">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Pilih Tanggal Rekap</h4>
          </div>

        <div class="modal-body"> 
        <label class="control-label col-md-2">Tanggal</label>
          <div class="col-md-7">
            <input id="tanggal2" class="form-control typeahead" type="date"  name="tanggal2" readonly="true">
          </div>
        </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
            <button type="button" class="btn btn-primary" id="btn_pil_rpt" name="btn_pil_rpt">Lanjutan</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    
    <!-- Modal unposting -->
    <div class="modal fade" id="dlgRpt1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Pilih Tanggal UnJurnal Rekap</h4>
          </div>

        <div class="modal-body"> 
        <label class="control-label col-md-2">Tanggal</label>
          <div class="col-md-7">
            <input id="tanggal1" class="form-control typeahead" type="date"  name="tanggal1" readonly="true">
          </div>
        </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
            <button type="button" class="btn btn-primary" id="btn_pil_rpt1" name="btn_pil_rpt">Lanjutkan</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
  </div>
</html>
