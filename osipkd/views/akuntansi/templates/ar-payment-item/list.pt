<html metal:use-macro="load: ../base.pt">
  <div metal:fill-slot="content">
    <h4>${request.title}</h4>
    <hr>
  <form id="header" method="POST" enctype="multipart/form-data" accept-charset="utf-8" 
      class="form-horizontal">
  <fieldset class="deformFormFieldset">
      <!--Tahun---------------------------------------------------------------->
      <div class="form-group">
        <div class="col-md-3">
          <div id="item-tahun">
            <label for="tahun" class="control-label col-md-3" id="req-tahun">
                    Tahun</label>
            <div class="col-md-9">
               <input id="tahun" class=" form-control " type="text" 
                      value="${request.session['tahun']}" 
                      readonly name="tahun">
            </div>
          </div>
        </div>
        <div class="col-md-5">
           <input id="tahun_nm" class=" form-control " type="text" value="${request.session['ag_step_nm']}" name="tahun_nm" readonly>
        </div>
        
      </div>

      <!----------------------------------------------------------------------->
      <input id="unit_id" type="hidden" value="${request.session['unit_id']}" name="unit_id">
      <div class="form-group"><!--SKPD-->
        <div class="col-md-3">
          <div id="item-unit_kd">
            <label for="unit_kd" class="control-label col-md-3" id="req-unit_kd">
                    SKPD</label>
            <div class="col-md-9">
               <input id="unit_kd" class="form-control typeahead" type="text" value="${request.session['unit_kd']}" name="unit_kd">
            </div>
          </div>
        </div>
        
        <div class="col-md-5">
           <input id="unit_nm" class=" form-control " type="text" value="${request.session['unit_nm']}" name="unit_nm">
        </div>
      </div>
      <!----------------------------------------------------------------------->
      <!--Tanggal-->
      <div class="form-group">
        <div class="col-md-3">
          <div id="item-tanggal">
            <label for="tanggal" class="control-label col-md-3" id="req-tanggal">
                    Tanggal</label>
            <div class="col-md-9">
               <input id="tanggal" class="form-control" type="text" readonly 
                      value="${request.session['tanggal']}" name="tanggal">
            </div>
          </div>
        </div>
      <script>
      $('#tanggal').click(
          function(){
            if (!Modernizr.inputtypes['date'] ||
                "date" != "date"){
              $('#tanggal').pickadate({"selectMonths": true,
                "submitFormat": "yyyy-mm-dd", 
                "selectYears": true, "format": "yyyy-mm-dd"});
            }
          }

      );
      
      $('#tanggal').change(function(){
            $.ajax({
              type: "POST",
              url: "/change/tanggal",
              data: "tanggal="+$('#tanggal').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);

                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  $('#unit_kd').val('');
                  $('#unit_nm').val('');
                  $('#unit_id').val('');
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
      });
      
      </script>
      </div>
      
      <script>

        $('#unit_kd').typeahead({
            "hint": true,
            "highlight": true,
            "minLength": 1,
            "remote": "/unit/act/headofkode?term=%QUERY", 
        },
        {
          "name": 'unit_kd',
          "displayKey": 'value',
        }); 
                
        $('#unit_nm').typeahead({
            "hint": true,
            "highlight": true,
            "minLength": 1,
            "remote": "/unit/act/headofnama?term=%QUERY", 
        },
        {
          "name": 'unit_nm',
          "displayKey": 'value',
        }); 
        
        $('#unit_kd').bind('typeahead:selected', function(obj, datum, name) {  
              $('#unit_nm').val(datum.nama);
              $('#unit_id').val(datum.id);
              change_unit();
        });

        $('#unit_nm').bind('typeahead:selected', function(obj, datum, name) {      
              $('#unit_kd').val(datum.kode);
              $('#unit_id').val(datum.id);
              change_unit()
        });

        function reload_kegiatan(){
            $.ajax({
              type: "POST",
              url: "/ag-kegiatan-sub/act/reload",
              data: "kegiatan_kd="+$('#kegiatan_kd').val(),
              success: function (html) {
                if (html.success == true) {
                  $('#kegiatan_sub_id').val(html.kegiatan_sub_id);
                    oTableUrl = "/ag-kegiatan-item/act/grid?kegiatan_sub_id="+html.kegiatan_sub_id;  
                    oTable.fnReloadAjax(oTableUrl);
                    $("#errors").html("<span class=''></span> " + '');
                } else {
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  $('#kegiatan_sub_id').val('');
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
        };
        
        function change_unit(){
            $.ajax({
              type: "POST",
              url: "/unit/act/changeid",
              data: "unit_id="+$('#unit_id').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);
                } else {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  $('#unit_kd').val('');
                  $('#unit_nm').val('');
                  $('#unit_id').val('');
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
        }
        
      </script> 
      
  </fieldset>
  </form>
  
    <table id="table1" class="table table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kegiatan</th>
                <th>No</th>
                <th>Kode</th>
                <th>Uraian</th>
                <th>Ref. Kode</th>
                <th>Ref. Nama</th>
                <th>Tanggal</th>
                <th>Nilai</th>
                <th>Posted</th>                
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
  </div>
  
  <div metal:fill-slot="scripts">
    <script>
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/ar-payment-item/grid/act";;  
        
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom": '<"toolbar">lfrtip',
          "sAjaxSource": oTableUrl,
          "bServerSide": true,
          "bProcessing": true,
          "bScrollCollapse": true,
          "bSort": true,
          "bInfo": false,
          "bFilter": true,
          "bAutoWidth": false,
          "bPaginate": true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 100],
              [10, 25, 50, 100]
          ],
          "aoColumnDefs": [{
                        "bSearchable": false,
                        "bVisible": false,
                        "aTargets": [0]
                    }],
          "aoColumns": [
              null,
              {"width": "75px"},
              {"width": "50px"},
              {"width": "75px"},
              null,
               {"width": "100px", "sClass":"left"},
              null,
              {"width": "75px", "sClass":"center"},
              {"width": "100px", "sClass":"right"},
              {"width": "50px", "sClass":"center"},
              ]
        });
          
        var tb_array = [
          '<div class="btn pull-left">',
          '	<button id="btn_add" class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_edit" class="btn btn btn-primary" type="button">Edit</button>',
          '	<button id="btn_delete" class="btn btn btn-danger" type="button">Hapus</button>',
          '	<button id="btn_post" class="btn btn btn-warning" type="button">Posting Transaksi</button>',
          '	<button id="btn_post_rkp" class="btn btn btn-success" type="button">Posting Rekap</button>',
          '	&nbsp;',
          '</div>',
        ];


        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                //mID = aData[0];
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0];
                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');
                        /*oTable2.fnReloadAjax("egaji/grid2?id=" + mID);*/                
            }
        });
        $('#btn_add').click(function () {
            window.location = '/ar-payment-item/add';
        });

        $('#btn_edit').click(function () {
            if (mID) window.location = '/ar-payment-item/'+mID+'/edit';
            else alert('Pilih Baris yang akan di edit');
        });

        $('#btn_delete').click(function () {
            if (mID) window.location = '/ar-payment-item/'+mID+'/delete';
            else alert('Pilih Baris yang akan di hapus');
        });        
        $('#btn_post').click(function () {
           $.ajax({
              type: "POST",
              url: "/ag-payment-item/detail/post",
              //data: "unit_kd="+$('#kegiatan_kd').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);
                } else {
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
         });        
        $('#btn_post_rkp').click(function () {
           $.ajax({
              type: "POST",
              url: "/ag-payment-item/rekap/post",
              //data: "unit_kd="+$('#kegiatan_kd').val(),
              success: function (html) {
                if (html.success == true) {
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  oTable.fnReloadAjax(oTableUrl);
                } else {
                  $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                }
              },
              beforeSend: function () {
                $("#errors").css('display', 'inline', 'important');
                $("#errors").html("<img src=\'${request.static_url('osipkd:static/images/ajax-loader.gif')}\' /> Loading...")
              }
            });
         });
        })
    </script>
  </div>
</html>
