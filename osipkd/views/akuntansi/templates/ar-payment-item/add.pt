<html metal:use-macro="load: ../base.pt">
<div metal:fill-slot="content">
<h4>${request.title}</h4>
<hr>
<form id="deform" method="POST" enctype="multipart/form-data" accept-charset="utf-8" 
      class="form-horizontal">
  <fieldset class="deformFormFieldset">
    <input type="hidden" name="_charset_" />
    <input type="hidden" name="__formid__" value="deform"/>
    <div tal:condition="'id' in form"> <!--ID-->
      <div tal:define="field form['id']" style="display: none;">
          ${structure:field.serialize()}
      </div>
    </div>
    
    <div class="form-group"><!--SKPD-->
      <div tal:define="field form['unit_id']" style="display: none;">
          ${structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['unit_kd']"  id="item-${field.oid}">
        <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                ${field.title}</label>
        <div class="col-md-8">
           ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
        </div>
      </div>
      <div class="col-md-8" tal:define="field form['unit_nm']" id="item-${field.oid}">
           ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
      </div>
      <script>
          $('#unit_kd').bind('typeahead:selected', function(obj, datum, name) {      
                $('#unit_id').val(datum.id);
                $('#unit_nm').val(datum.nama);
                $('#unit_kd').val(datum.kode);
          });
          $('#unit_nm').bind('typeahead:selected', function(obj, datum, name) {      
                $('#unit_id').val(datum.id);
                $('#unit_nm').val(datum.nama);
                $('#unit_kd').val(datum.kode);
          });
      </script>
      
    </div>
    
    <!--Kegiatan-->
    <!--div class="form-group">
      <div tal:define="field form['kegiatan_sub_id']" style="display: none">
          {structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['kegiatan_sub_kd']"  id="item-{field.oid}">
        <label for="{field.oid}" class="control-label col-md-4" id="req-{field.oid}">
                {field.title}</label>
        <div class="col-md-8">
           {structure:field.serialize()}
            <p id="error-{field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               {error}</p>
        </div>
      </div>
      <div class="col-md-8" tal:define="field form['kegiatan_sub_nm']" id="item-{field.oid}">
           {structure:field.serialize()}
            <p id="error-{field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               {error}</p>
      </div>
      
      <script>
          $('#kegiatan_sub_kd').bind('typeahead:selected', function(obj, datum, name) {      
                $('#kegiatan_sub_id').val(datum.id);
                $('#kegiatan_sub_nm').val(datum.nama);
                $('#kegiatan_sub_kd').val(datum.kode);
          });
          $('#kegiatan_sub_nm').bind('typeahead:selected', function(obj, datum, name) {      
                $('#kegiatan_sub_id').val(datum.id);
                $('#kegiatan_sub_nm').val(datum.nama);
                $('#kegiatan_sub_kd').val(datum.kode);
          });
      </script>
      
    </div!-->

    <div class="form-group"><!--Tanggal/Nilai-->
      <div class="col-md-4" tal:define="field form['tanggal']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
              <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                 tal:repeat="error field.error.messages()">
                 ${error}</p>
          </div>
      </div>
 
      <div class="col-md-6">
        <div class="form-group" tal:define="field form['amount']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-1" id="req-${field.oid}" style="text-align:left;!important;">
                  ${field.title}</label>
          <div class="col-md-6">
             ${structure:field.serialize()}
              <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                 tal:repeat="error field.error.messages()">
                 ${error}</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="form-group"><!--Rekening-->
      <div tal:define="field form['rekening_id']" id="item-${field.oid}" style="display: none;">
           ${structure:field.serialize()}
      </div>
      
      <div class="col-md-4" tal:define="field form['kode']" >
        <div id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-8" tal:define="field form['nama']">
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
    </div>
      <script>
        $('#kode').bind('typeahead:selected', function(obj, datum, name) {  
              $('#nama').val(datum.nama);
              $('#rekening_id').val(datum.id);
        });

        $('#nama').bind('typeahead:selected', function(obj, datum, name) {      
              $('#kode').val(datum.kode);
              $('#rekening_id').val(datum.id);
        });
      </script>       
      
    <div class="form-group"> <!--REFERECE-->
      <div class="col-md-4" tal:define="field form['ref_kode']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        
      </div>
      <div class="col-md-8" tal:define="field form['ref_nama']" >
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
    </div>

    <div class="form-group"> <!--BENDAHARA-->
      <div tal:define="field form['bud_uid']" style="display: none;">
          ${structure:field.serialize()}
      </div>
      <div class="col-md-4" tal:define="field form['bud_nip']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
            <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
               tal:repeat="error field.error.messages()">
               ${error}</p>
          </div>
        
      </div>
      <div class="col-md-4" tal:define="field form['bud_nama']" >
         ${structure:field.serialize()}
          <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
             tal:repeat="error field.error.messages()">
             ${error}</p>
      </div>
      <script>
       $('#bud_uid').typeahead({
          "hint"     : true,
          "highlight": true,
          "minLength": 1,
          "remote"   : "/pejabat/act/headofkode2?term=%QUERY",
        },
        {
        "name"      : 'bud_uid',
        "displayKey": 'value',
      });
     
      $('#bud_nama').typeahead({
          "hint"     : true,
          "highlight": true,
          "minLength": 1,
          "remote"   : "/pejabat/act/headofnama2?term=%QUERY",
        },
        {
          "name"      : 'bud_nama',
          "displayKey": 'value',
        });
    
    $('#bud_uid').bind('typeahead:selected', function(obj, datum, name) {  
          $('#bud_nama').val(datum.nama);
          $('#bud_nip').val(datum.nip);
          $('#pejabat_id').val(datum.id);
    });
    $('#bud_nama').bind('typeahead:selected', function(obj, datum, name) {  
          $('#bud_uid').val(datum.kode);
          $('#bud_nip').val(datum.nip);
          $('#pejabat_id').val(datum.id);
    });
    
    $("#bud_uid").attr('readonly',true);
    $("#bud_nip").attr('readonly',true);
    </script>
    </div>

    <div class="form-group"> <!--Sumber-->
      <div class="col-md-4" tal:define="field form['sumber_id']" id="item-${field.oid}">
          <label for="${field.oid}" class="control-label col-md-4" id="req-${field.oid}">
                  ${field.title}</label>
          <div class="col-md-8">
             ${structure:field.serialize()}
              <p id="error-${field.oid}" class="help-block" tal:condition="field.error"
                 tal:repeat="error field.error.messages()">
                 ${error}</p>
          </div>
      </div>
      <div class="col-xs-3">
          <button id="deformsave" name="simpan" type="submit" class="btn btn-primary "
                value="simpan">Simpan</button>
          <button id="deformcancel" name="batal" type="submit" class="btn btn-danger "
                value="batal">Batal</button>
      </div>
    </div>
  </fieldset>
</form>
</div>
</html>
